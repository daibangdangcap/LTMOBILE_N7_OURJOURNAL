<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banbeitem_FriendsItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar_FriendsItems"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/userpage_defaultuser"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNameUser_FriendsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Tên người dùng"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintLeft_toRightOf="@id/imgAvatar_FriendsItems"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFriendsRequest_FriendsItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imgAvatar_FriendsItems"
            app:layout_constraintBottom_toBottomOf="parent"

            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:background="@color/white"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete_FriendsItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/btnFriendsRequest_FriendsItems"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"

            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:background="@color/white"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="30dp"
            />
        <Button
            android:id="@+id/btnFriends_FriendsItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:paddingHorizontal="35dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgAvatar_FriendsItems" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>