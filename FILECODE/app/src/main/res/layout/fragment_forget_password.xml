<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0278AE"
    tools:context=".fragment.ForgetPasswordFragment"
    android:id="@+id/TrangQuenMatKhau">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:id="@+id/Forgetpasspage_btback"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/forgetpassword_arrowback"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#0278AE"
            />
        <TextView
            android:id="@+id/Forgetpasspage_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Forgetpasspage_btback"
            app:layout_constraintLeft_toLeftOf="@+id/Forgetpasspage_btback"
            android:text="Quên mật khẩu"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/Forgetpasspage_retangle_white"
            android:layout_width="335dp"
            android:layout_height="331dp"
            android:src="@drawable/forgetpassword_retangle_white"
            app:layout_constraintTop_toBottomOf="@+id/Forgetpasspage_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Journal 2023"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Forgetpasspage_retangle_white"
            android:layout_marginTop="100dp"
            />
        <EditText
            android:id="@+id/forgetpasspage_etEmail"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintRight_toRightOf="@id/Forgetpasspage_retangle_white"
            app:layout_constraintLeft_toLeftOf="@id/Forgetpasspage_retangle_white"
            app:layout_constraintTop_toTopOf="@id/Forgetpasspage_retangle_white"
            android:layout_marginTop="100dp"
            android:background="@drawable/forgetpassword_retangle_13"
            android:hint="Nhập email của bạn"
            android:textSize="22dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/Forgetpasspage_btsubmit"
            android:layout_width="290dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/forgetpasspage_etEmail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/forgetpassword_round_button"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textSize="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
