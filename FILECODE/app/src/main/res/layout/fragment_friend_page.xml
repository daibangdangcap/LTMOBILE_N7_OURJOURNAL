<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FriendPageFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trangcanhan"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:gravity="center"
            >
            <ImageView   android:id="@+id/Poster_FriendsUserPage"
                android:background="@drawable/userpage_cover"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView android:id="@+id/btnBack_FriendsUserPage"
                android:src="@drawable/arrow_back_ios_new"
                android:contentDescription="arrow_back_ios_new"
                android:layout_marginStart="9dp"
                android:layout_marginTop="20dp"
                android:layout_width="33dp"
                android:layout_height="31dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintLeft_toLeftOf="@id/Poster_FriendsUserPage"
                app:layout_constraintTop_toTopOf="parent"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar_FriendsUserPage"
                android:src="@drawable/userpage_defaultuser"
                android:contentDescription="ellipse_6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="150dp"/>
            <TextView android:id="@+id/tvUserName_FriendsUserPage"
                android:textSize="32sp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgAvatar_FriendsUserPage"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="An Lê"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserName_FriendsUserPage"
                android:id="@+id/btnFriendsUserPage_FriendsUserPage"
                android:text="Bạn bè"
                android:textSize="20dp"
                android:drawableEnd="@drawable/friendpage_checked"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                app:cornerRadius="30dp"
                android:background="#B6E2A1"
                android:layout_marginLeft="40dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/btnFriendsUserPage_FriendsUserPage"
                app:layout_constraintTop_toBottomOf="@id/tvUserName_FriendsUserPage"
                android:id="@+id/btnDeleteFriends_FriendsUserPage"
                android:text="Hủy kết bạn"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:drawableEnd="@drawable/friendpage_unfriend"
                app:backgroundTint="@null"
                app:cornerRadius="30dp"
                android:background="#D9D9D9"
                android:layout_marginHorizontal="10dp"/>
            <RelativeLayout android:id="@+id/PersonInform_FriendsUserPage"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/btnFriendsUserPage_FriendsUserPage"
                android:background="@drawable/userpage_rectangle"
                >
                <TextView android:id="@+id/PhoneInfo_FriendsUserPage"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="78dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0707900xxx"
                    android:textAlignment="textEnd"
                    />
                <TextView android:id="@+id/SexInfo_FriendsUserPage"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="132dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textAlignment="textEnd"
                    />
                <TextView android:id="@+id/DOBInfo_FriendsUserPage"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2000"
                    />
                <TextView android:id="@+id/tvDOB_FriendsUserPage"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sinh nhật"
                    android:drawableLeft="@drawable/userpage_cake"
                    android:textStyle="bold"
                    />
                <TextView android:id="@+id/tvPhone_FriendsUserPage"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="78dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:drawableLeft="@drawable/userpage_phone"
                    android:textStyle="bold"
                    />
                <TextView android:id="@+id/tvSex_FriendsUserPage"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="132dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:drawableLeft="@drawable/userpage_gender"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PersonInform_FriendsUserPage"
                android:layout_marginTop="50dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>