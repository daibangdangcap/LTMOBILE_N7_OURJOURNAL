<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FriendRequestFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/btnBack_FriendsRequests"
                android:src="@drawable/arrow_back_ios_new"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_width="33dp"
                android:layout_height="31dp" />
            <TextView android:id="@+id/tvFriendsRequests"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lời mời kết bạn"
                />
        </RelativeLayout>
        <ScrollView android:id="@+id/scView_FriendsRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvList_FriendsRequests">

            </androidx.recyclerview.widget.RecyclerView>

        </ScrollView>
    </LinearLayout>

</FrameLayout>