<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Setting_HelpFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Helppage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btnBack_Support"
            android:src="@drawable/arrow_back_ios_new"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_width="33dp"
            android:layout_height="31dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/tvSupport_Support"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="40dp"
            android:layout_width="157dp"
            android:layout_height="62dp"
            android:text="Hỗ Trợ"
            app:layout_constraintLeft_toLeftOf="@+id/btnBack_Support"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button android:id="@+id/btnAccountSupport_Support"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_marginTop="170dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ tài khoản"
            android:textAllCaps="false"
            android:paddingHorizontal="60dp"
            app:backgroundTint="@null"
            android:background="@drawable/setting_password_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/Helpage_ivline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button android:id="@+id/btnTechSupport_Support"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ kỹ thuật"
            android:textAllCaps="false"
            android:paddingHorizontal="60dp"
            app:backgroundTint="@null"
            android:background="@drawable/setting_password_rectangle"
            app:layout_constraintTop_toBottomOf="@+id/btnAccountSupport_Support"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView android:id="@+id/OurJournal2023_Support"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Journal 2023"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:id="@+id/Helpage_ivline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="87dp"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>