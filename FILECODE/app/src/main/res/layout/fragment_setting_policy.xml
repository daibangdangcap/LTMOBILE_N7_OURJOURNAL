<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Setting_PolicyFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView android:id="@+id/btnBack_Policy"
            android:src="@drawable/arrow_back_ios_new"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_width="33dp"
            android:layout_height="31dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView android:id="@+id/tvPolicy_Policy"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chính sách và điều khoản"
            app:layout_constraintLeft_toLeftOf="@+id/btnBack_Policy"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:src="@drawable/setting_policy_bg"
            android:contentDescription="untitled_1"
            android:layout_marginStart="0dp"
            android:layout_marginTop="94dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnUserPolicy_Policy"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_marginTop="120dp"
            android:layout_width="350dp"
            android:layout_height="54.5dp"
            app:cornerRadius="20dp"
            android:text="Chính sách người dùng"
            android:backgroundTint="#FBFFB1"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/Policypage_ivline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button android:id="@+id/btnOurJournal_Policy"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:layout_width="350dp"
            android:layout_height="54.5dp"
            android:text="Chính sách Our Journal"
            app:backgroundTint="#B6E2A1"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btnUserPolicy_Policy"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button android:id="@+id/btnAppPolicy_Policy"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:layout_width="350dp"
            android:layout_height="54.5dp"
            android:text="Điều khoản ứng dụng"
            app:backgroundTint="#82AAE3"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btnOurJournal_Policy"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Journal 2023"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:id="@+id/Policypage_ivline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="87dp"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>