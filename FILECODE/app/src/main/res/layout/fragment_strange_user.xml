<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StrangeUserFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/StrangerUserPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/Poster_FriendsUserPage"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/userpage_cover"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnBack_StrangerUserPage"
                android:layout_width="33dp"
                android:layout_height="31dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="20dp"
                android:contentDescription="arrow_back_ios_new"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/arrow_back_ios_new"
                app:layout_constraintLeft_toLeftOf="@id/Poster_FriendsUserPage"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar_StrangerUserPage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="150dp"
                android:contentDescription="ellipse_6"
                android:src="@drawable/userpage_defaultuser"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUserName_StrangerUserPage"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="32sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgAvatar_StrangerUserPage" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm_StrangerUserPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="#B6E2A1"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:backgroundTint="@null"
                app:cornerRadius="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserName_StrangerUserPage" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete_StrangerUserPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:background="#FF6666"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:backgroundTint="@null"
                app:cornerRadius="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserName_StrangerUserPage" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFriendsRequest_StrangerUserPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:background="#DDDDDD"
                android:text="Đã gửi lời mời"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:backgroundTint="@null"
                app:cornerRadius="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserName_StrangerUserPage" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFriendsUserPage_StrangerUserPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="#82AAE3"
                android:drawableEnd="@drawable/drawermenu_addfriends"
                android:text="Thêm bạn bè"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:backgroundTint="@null"
                app:cornerRadius="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserName_StrangerUserPage" />

            <RelativeLayout
                android:id="@+id/PersonInform_StrangerUserPage"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/userpage_rectangle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnFriendsUserPage_StrangerUserPage">

                <TextView
                    android:id="@+id/PhoneInfo_StrangerUserPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="78dp"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/SexInfo_StrangerUserPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="132dp"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DOBInfo_StrangerUserPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="20dp"
                    android:text="02/02/2002"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDOB_StrangerUserPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/userpage_cake"
                    android:text="Sinh nhật"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPhone_StrangerUserPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="78dp"
                    android:drawableLeft="@drawable/userpage_phone"
                    android:text="Số điện thoại"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSex_StrangerUserPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="132dp"
                    android:drawableLeft="@drawable/userpage_gender"
                    android:text="Giới tính"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PersonInform_StrangerUserPage" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>