<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/loimoiKBItem_FriendsRequestItems">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/userpage_defaultuser"
            android:id="@+id/imgAvatar_FriendsRequestItems"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvNameUser_FriendsRequestItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            app:layout_constraintLeft_toRightOf="@id/imgAvatar_FriendsRequestItems"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="27dp"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:textColor="#E6393737"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFriendsRequest_FriendsRequestItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imgAvatar_FriendsRequestItems"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Xác nhận"
            android:fontFamily="@font/inter"
            android:textColor="#222020"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="7dp"
            android:textAllCaps="false"
            app:backgroundTint="#B6E2A1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete_FriendsRequestItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/btnFriendsRequest_FriendsRequestItems"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:text="Xóa"
            app:cornerRadius="7dp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textColor="#222020"
            app:backgroundTint="#FF6666"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="30dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>